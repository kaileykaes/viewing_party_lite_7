<h1>Viewing Party</h1>


<% if session[:user_id] %>
  <%= button_to "Log Out", logout_path, method: :delete %>
<% else %>
  <%= button_to "Log In", login_path, method: :get %>
  <%= button_to "Create New User", register_path %>
<% end %>

<h3>Existing Users:</h3>
<ul class="user-list">
  <% @users.each do |user| %>
    <%= link_to "#{user.name}", "/users/#{user.id}" %>
  <% end %>
</ul>